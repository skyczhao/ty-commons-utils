    <property>
        <name>spark.default.parallelism</name>
        <value>40</value>
        <description></description>
    </property>
    <property>
        <name>spark.speculation.multiplier</name>
        <value>1.5</value>
        <description></description>
    </property>

    <property>
        <name>spark.default.user</name>
        <value>zeus</value>
        <description></description>
    </property>
    <property>
